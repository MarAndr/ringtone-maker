<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбранный файл:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_mainFragment_fileName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textView_mainFragment_fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="file name"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_mainFragment_chooseFile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_title" />

    <Button
        android:id="@+id/button_mainFragment_chooseFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose file"
        app:layout_constraintBottom_toTopOf="@id/textView_title_chooseFolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_mainFragment_fileName" />

    <TextView
        android:id="@+id/textView_title_chooseFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Папка для рингтона:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_mainFragment_choosedFolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_mainFragment_chooseTheFolder"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textView_mainFragment_choosedFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="file name"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_mainFragment_chooseTheFolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_title_chooseFolder" />

    <LinearLayout
        android:id="@+id/linearLayout_mainFragment_chooseFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/button_mainFragment_createRingtone"
        app:layout_constraintTop_toBottomOf="@id/button_mainFragment_chooseTheFolder">

        <com.google.android.material.textfield.TextInputLayout
            android:enabled="false"
            android:id="@+id/textInputLayout_mainFragment_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toTopOf="@id/button_mainFragment_createRingtone"
            app:layout_constraintTop_toBottomOf="@+id/button_mainFragment_chooseFile">

            <com.google.android.material.textfield.TextInputEditText
                android:inputType="number"
                android:id="@+id/et_mainFragment_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="начальное время" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:enabled="false"
            android:id="@+id/textInputLayout_mainFragment_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/button_mainFragment_chooseTheFolder"
            app:layout_constraintTop_toBottomOf="@+id/button_mainFragment_chooseFile">

            <com.google.android.material.textfield.TextInputEditText
                android:inputType="number"
                android:id="@+id/et_mainFragment_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="начальное время" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <Button
        android:id="@+id/button_mainFragment_chooseTheFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="выбрать папку для сохранения рингтона"
        app:layout_constraintBottom_toTopOf="@id/button_mainFragment_createRingtone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_mainFragment_choosedFolder" />


    <Button
        android:enabled="false"
        android:id="@+id/button_mainFragment_createRingtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="создать рингтон"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_mainFragment_chooseFile" />

    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/progressBar_mainFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_mainFragment_playRingtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="прослушать рингтон"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_mainFragment_createRingtone" />

    <Button
        android:id="@+id/button_mainFragment_setAsRingtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="установить в качестве рингтона"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_mainFragment_playRingtone" />

</androidx.constraintlayout.widget.ConstraintLayout>